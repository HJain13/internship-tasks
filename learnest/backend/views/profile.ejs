<!doctype html>
<html>
<head>
    <title>Learnest</title>
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.icons8.com/fonts/line-awesome/1.1/css/line-awesome-font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
	<div class="container text-center">
		<div class="page-header text-center">
			<h1>Profile Page</h1>
		</div>
		<div class="row">
			<% if(user.local.email != null) { %>  			
			<div class="col-sm-6 col-sm-offset-3">
				<div class="well text-left">
					<h3><span class="fa fa-user"></span> Local</h3>
					<p>
						<strong>id</strong>: <%= user._id %><br>
						<strong>Email</strong>: <%= user.local.email %><br>
						<strong>Name</strong>: <%= user.local.name %><br>
						<strong>Date of Birth</strong>: <%= user.local.dob %><br>
						<strong>Phone</strong>: <%= user.local.phone %><br>
						<strong>Hashed Password</strong>: <%= user.local.password %>
					</p>
				</div>
			</div>
			<% } %>
			<% if(user.twitter.id != null) { %>  
			<div class="col-sm-6 col-sm-offset-3">
				<div class="well text-left">
					<h3 class="text-info"><span class="fa fa-twitter"></span> Twitter</h3>
					<p>
						<strong>id</strong>: <%= user.twitter.id %><br>
						<strong>token</strong>: <%= user.twitter.token %><br>
						<strong>username</strong>: <%= user.twitter.username %><br>
						<strong>displayName</strong>: <%= user.twitter.displayName %>
					</p>
				</div>
			</div>	
			<% } %>
			<% if(user.google.id != null) { %>  
			<div class="col-sm-6 col-sm-offset-3">
				<div class="well text-left">
					<h3 class="text-danger"><span class="fa fa-google-plus"></span> Google</h3>
					<p>
						<strong>id</strong>: <%= user.google.id %><br>
						<strong>token</strong>: <%= user.google.token %><br>
						<strong>email</strong>: <%= user.google.email %><br>
						<strong>name</strong>: <%= user.google.name %>
					</p>
				</div>
			</div>			
			<% } %>
		</div>
		<hr>
		<a href="/logout" class="btn btn-danger btn-md">Logout</a>
	</div>
</body>
</html>